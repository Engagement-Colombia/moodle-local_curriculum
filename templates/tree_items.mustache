{{!
    @template local_curriculum/tree_items

    Partial template for item leaf nodes loaded via AJAX.
    Strings are pre-loaded by JS and passed as context variables.

    Example context (json):
    {
        "items": [
            {
                "id": 1000,
                "coursecode": "COURSE101",
                "grouptemplate": "Group Template 1",
                "validity": 60
            }
        ],
        "validitylabel": "Validity (days)",
        "noitemslabel": "No items found"
    }
}}
{{#items}}
    <div class="curriculum-tree-node curriculum-tree-item-leaf" data-node-id="{{id}}" data-node-type="item">
        <div class="curriculum-tree-item">
            <div class="curriculum-tree-content">
                <span class="curriculum-tree-label">
                    {{coursecode}}
                </span>
                {{#grouptemplate}}
                    <span class="curriculum-tree-description">{{grouptemplate}}</span>
                {{/grouptemplate}}
                <span class="curriculum-tree-meta">
                    {{validitylabel}}: {{validity}}
                </span>
            </div>
        </div>
    </div>
{{/items}}
{{^items}}
    <em class="curriculum-tree-empty">{{noitemslabel}}</em>
{{/items}}
