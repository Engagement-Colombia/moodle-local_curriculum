{{!
    @template local_curriculum/tree

    Curriculum tree template. Only programs are rendered initially.
    Children (versions, cycles, items) are loaded on demand via AJAX.

    Example context (json):
    {
        "manageurl": "http://localhost/moodle",
        "programs": [
            {
                "id": 1,
                "name": "Program 1",
                "description": "Description for Program 1",
                "customfields": [
                    {
                        "name": "Field 1",
                        "value": "Value 1"
                    }
                ]
            }
        ]
    }
}}
<div class="curriculum-tree">
    <div class="curriculum-tree-controls">
        <button class="curriculum-tree-control-btn curriculum-tree-expand-all" title="{{#str}}expandall, local_curriculum{{/str}}">
            {{#str}}expandall, local_curriculum{{/str}}
        </button>
        <button class="curriculum-tree-control-btn curriculum-tree-collapse-all" title="{{#str}}collapseall, local_curriculum{{/str}}">
            {{#str}}collapseall, local_curriculum{{/str}}
        </button>
    </div>
    {{#programs}}
        <div class="curriculum-tree-node curriculum-tree-program curriculum-tree-collapsed" data-node-id="{{id}}" data-node-type="program">
            <div class="curriculum-tree-item">
                <button class="curriculum-tree-toggle" aria-expanded="false" title="{{#str}}expandall, local_curriculum{{/str}}"></button>
                <div class="curriculum-tree-content">
                    <span class="curriculum-tree-label">
                        {{name}}
                    </span>
                    <ul class="curriculum-tree-meta">
                        {{#customfields}}
                            {{#value}}
                                <li><strong>{{name}}</strong><span>{{value}}</span></li>
                            {{/value}}
                        {{/customfields}}
                    </ul>
                    {{#description}}
                        <span class="curriculum-tree-description">{{{description}}}</span>
                    {{/description}}
                </div>
                <div class="curriculum-tree-actions">
                    <a class="curriculum-tree-action-link" href="{{manageurl}}/local/curriculum/manage.php?ptype=version&parentid={{id}}" title="{{#str}}configure, local_curriculum{{/str}}">
                        {{#pix}}a/view_list_active, core{{/pix}}
                    </a>
                </div>
            </div>
            <div class="curriculum-tree-children" data-loaded="false" style="display: none;"></div>
        </div>
    {{/programs}}
</div>
