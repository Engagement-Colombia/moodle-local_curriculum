{{!
    @template local_curriculum/tree_cycles

    Partial template for cycle nodes loaded via AJAX.
    Strings are pre-loaded by JS and passed as context variables.

    Example context (json):
    {
        "items": [
            {
                "id": 100,
                "name": "Cycle 1",
                "stage": 1,
                "duration": 30,
                "description": "Description for Cycle 1"
            }
        ],
        "manageurl": "http://localhost/moodle",
        "expandlabel": "Expand all",
        "configurelabel": "Configure",
        "stagelabel": "Stage",
        "durationlabel": "Duration (days)",
        "nocycleslabel": "No cycles found"
    }
}}
{{#items}}
    <div class="curriculum-tree-node curriculum-tree-cycle curriculum-tree-collapsed" data-node-id="{{id}}" data-node-type="cycle">
        <div class="curriculum-tree-item">
            <button class="curriculum-tree-toggle" aria-expanded="false" title="{{expandlabel}}"></button>
            <div class="curriculum-tree-content">
                <span class="curriculum-tree-label">
                    {{name}}
                </span>
                {{#description}}
                    <span class="curriculum-tree-description">{{{description}}}</span>
                {{/description}}
                <span class="curriculum-tree-meta">
                    {{stagelabel}}: {{stage}}
                    {{#duration}}
                        | {{durationlabel}}: {{duration}}
                    {{/duration}}
                </span>
            </div>
            <div class="curriculum-tree-actions">
                <a class="curriculum-tree-action-link" href="{{manageurl}}/local/curriculum/manage.php?ptype=cycle_item&parentid={{id}}" title="{{configurelabel}}">
                    {{#pix}}a/view_list_active, core{{/pix}}
                </a>
            </div>
        </div>
        <div class="curriculum-tree-children" data-loaded="false" style="display: none;"></div>
    </div>
{{/items}}
{{^items}}
    <em class="curriculum-tree-empty">{{nocycleslabel}}</em>
{{/items}}
